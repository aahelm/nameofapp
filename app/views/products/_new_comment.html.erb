<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= form.label :body, "Comments" %><br>
      <%= form.text_area :body %>
    </p>
    <p>
      <%= form.label :rating %><br>
      <%= form.text_field :rating, class: "rating" %>
    </p>
    <p>
      <%= form.submit "Submit" %>
    </p>
  <% end %>
<% end %>
